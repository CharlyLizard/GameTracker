---
import Layout from "../layouts/Layout.astro";
import ResetPasswordComponent from "../components/Cauth/ResetPassword.jsx";
---

<Layout>
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-black to-gray-800">
    <div class="bg-gray-800 rounded-2xl shadow-2xl p-8 max-w-md w-full border border-purple-700/30">
      <h1 class="text-3xl font-extrabold text-purple-300 mb-4 text-center">Restablecer contraseña</h1>
      <p class="text-gray-400 mb-6 text-center">
        Ingresa tu nueva contraseña para tu cuenta.
      </p>
      <ResetPasswordComponent client:load />
      <div class="mt-6 text-center">
        <a href="/auth" class="text-purple-400 hover:underline">Volver al inicio de sesión</a>
      </div>
    </div>
  </section>
</Layout>